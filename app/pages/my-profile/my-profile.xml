<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded" navigatedTo="onNavigatedTo" actionBarHidden = "true">
    <StackLayout>
        <Label text="My Profile" textWrap="true" class="title" />
            <GridLayout rows="*, *, *, *, *" columns="*, *" class="content">
                <StackLayout row = "0" col = "0" class="grid">
                    <Label text="Name" textWrap="true" />
                </StackLayout>

                <StackLayout row = "0" col = "1" class="grid">
                    <TextField hint="Please enter your name here:" text="{{  }}" />
                </StackLayout>

                <StackLayout row = "1" col = "0" class="grid">
                     <Label text="Nickname" textWrap="true" />
                    </StackLayout>

                <StackLayout row = "1" col = "1" class="grid">
                    <TextField hint="Please enter your nickname here:" text="{{  }}" />                
                    </StackLayout>

                <StackLayout row = "2" col = "0" class="grid">
                     <Label text="#Repos" textWrap="true" />
                </StackLayout>

                <StackLayout row = "2" col = "1" class="grid">
                <StackLayout orientation="horizontal">
                        <Label text="33 Repos, " textWrap="true" />
                        <Label text="Last updated at 22/09/2019" textWrap="true" />
                        </StackLayout>
                </StackLayout>

                <StackLayout row = "3" col = "0" class="grid">
                     <Label text="#Followers" textWrap="true" />
                </StackLayout>

                <StackLayout row = "3" col = "1" class="grid">
                <StackLayout orientation="horizontal">
                        <Label text="33 Followers" textWrap="true" />
                    </StackLayout>
                </StackLayout>

                <StackLayout row = "4" col = "0" colSpan="2" class="grid">
                     <Label text="Avatar" textWrap="true" />
                     <Image src="https://github.com/ColinPelkmans.png" stretch="aspectFit" />
                </StackLayout>

            </GridLayout>
    </StackLayout>
</Page>